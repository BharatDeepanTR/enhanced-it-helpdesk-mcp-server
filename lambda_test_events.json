        "jsonrpc": "2.0",
        "id": 3,
        "method": "tools/call",
        "params": {
          "name": "get_application_details",
          "arguments": {
            "asset_id": "208194"
          }
        }
      }
    },
    "mcp_tools_call_missing_asset": {
      "description": "Test MCP tools/call with missing asset_id",
      "event": {
