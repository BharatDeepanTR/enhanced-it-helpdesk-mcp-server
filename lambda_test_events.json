      "event": {
        "jsonrpc": "2.0",
        "id": 5,
        "method": "tools/call",
        "params": {
          "name": "target-direct-application-details-lambda___get_application_details",
          "arguments": {
            "asset_id": "a208194"
          }
        }
      }
    }
