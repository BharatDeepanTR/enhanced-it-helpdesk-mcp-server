{
  "test_events": {
    "mcp_tools_list": {
      "description": "Test MCP tools/list method",
      "event": {
        "jsonrpc": "2.0",
        "id": 1,
        "method": "tools/list"
      }
    },
    "mcp_tools_call_valid_asset": {
      "description": "Test MCP tools/call with valid asset ID",
      "event": {
        "jsonrpc": "2.0",
        "id": 2,
        "method": "tools/call",
        "params": {
          "name": "get_application_details",
          "arguments": {
            "asset_id": "a208194"
          }
        }
      }
    },
    "mcp_tools_call_without_prefix": {
      "description": "Test MCP tools/call with asset ID without 'a' prefix",
