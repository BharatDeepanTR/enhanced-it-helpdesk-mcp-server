# Simple HTTP DNS Container - Testing Theory That MCP Was Unnecessary
FROM python:3.9-slim

# Set environment variables
ENV ENV=dev
ENV APP_CONFIG_PATH=/a208194/APISECRETS
ENV PORT=8080
ENV HOST=0.0.0.0

# Install required packages
WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY chatops_helpers.py .
COPY chatops_route_dns_intent.py .
COPY container_handler_fixed_http.py .

# Create function.txt for genAI (optional)
RUN echo '{"url": "https://api.openai.com/v1/chat/completions", "headers": {"Authorization": "Bearer YOUR_API_KEY_HERE", "Content-Type": "application/json"}}' > /opt/function.txt

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Run the application
CMD ["python", "container_handler_fixed_http.py"]